{
  "name": "visionflow",
  "version": "1.0.0",
  "description": "Screen recording with AI processing",
  "main": "dist/main.js",
  "scripts": {
    "build:main": "tsc -p tsconfig.main.json",
    "build:renderer": "esbuild src/renderer/renderer.ts --bundle --outfile=dist/renderer/renderer.js --platform=browser --target=chrome120",
    "build:copy": "mkdir -p dist/renderer && cp src/renderer/index.html dist/renderer/ && cp src/renderer/styles.css dist/renderer/",
    "build": "npm run build:main && npm run build:renderer && npm run build:copy",
    "start": "npm run build && electron .",
    "dev": "npm run build && electron ."
  },
  "keywords": ["electron", "screen-recording", "video"],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@types/node": "^20.10.0",
    "esbuild": "^0.19.0",
    "electron": "^28.0.0",
    "typescript": "^5.3.0"
  }
}
